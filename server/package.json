    "ioredis": "^5.3.2",
    "bull": "^4.12.0",
    "@sendgrid/mail": "^8.1.0",
    "aws-sdk": "^2.1520.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "uuid": "^9.0.1",
    "date-fns": "^3.0.6",
    "validator": "^13.11.0"
